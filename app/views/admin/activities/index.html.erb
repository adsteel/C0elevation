
<% provide(:title, "Admin - All Activities") %>

<div class="container-fluid">

	<div class="container all-activities admin">
	<h1>Listing activities</h1>

	<div class="row">
		<%= link_to '+ Add activity', new_admin_activity_path, class: "btn btn-success" %> 
		<%= render 'admin/shared/admin_breadcrumbs' %>
	</div> 

	<table>
		<thead>
			<tr>
				<th>Title</th>
				<th>Description</th>
				<th></th>
				<th></th>
				<th></th>
			</tr>
		</thead>

		<tbody>
			<% @activities.each do |activity| %>
				<tr>
					<td><%= activity.title %></td>
					<td><%= activity.description %></td>
					<td><%= link_to 'Show', admin_activity_path(activity) %></td>
					<td><%= link_to 'Edit', edit_admin_activity_path(activity) %></td>
				</tr>
			<% end %>
		</tbody>
	</table>

	<br>
	</div>
</div>