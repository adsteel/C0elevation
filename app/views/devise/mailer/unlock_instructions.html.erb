<% provide(:title, 'Account locked') %>

<div class="row">
	Hello <%= @resource.first %>!
</div>

<div class="row">
	Your account has been locked due to an excessive number of unsuccessful sign in attempts.
</div>

<div class="row">
	Click the link below to unlock your account:
</div>

<div class="row">
	<%= link_to 'Unlock my account', unlock_url(@resource, unlock_token: @token), :class => "pure-button pure-button-primary" %>
</div>
