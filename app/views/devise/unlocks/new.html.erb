<% provide(:title, 'Resend unlock instructions') %>

<section class="devise">

	<h2 class="is-center">Resend unlock instructions</h2>

	<div class="row">
		<div class="col-sm-4 col-sm-offset-4 col-xs-10 col-xs-offset-1">
			<%= form_for resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }  do |f| %>
				<%= devise_error_messages! %>

				<div class="form-group">
					<%= f.email_field :email, autofocus: true, :placeholder => "your email", :class => "form-control"  %>
				</div>

				<div class="form-group">
					<%= f.submit "Resend unlock instruction", :class => "btn btn-primary btn-lg" %>
				</div>
			<% end %>
		</div>
	</div>

	<%= render "devise/shared/links" %>

</section>