<% provide(:title, 'Sign in') %>

<section class="devise">

	<h2 class="is-center">Sign in</h2>

	<div class="row">
		<div class="col-sm-4 col-sm-offset-4 col-xs-10 col-xs-offset-1">
			
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
      <% end %>
			
			<%= form_for resource, as: resource_name, url: session_path(resource_name), html: {  } do |f| %>
				<%= devise_error_messages! %>

				<div class="form-group">
					<%= f.email_field :email, autofocus: true, :placeholder => "your email", :class => "form-control"  %>

				</div>
				<div class="form-group">
					<%= f.password_field :password, autocomplete: "off",
							:placeholder => "password", :class => "form-control" %>
				</div>

				<div class="form-group">				
					<%= f.submit "Sign in", :class => "btn btn-primary btn-lg" %>
				</div>
			<% end %>
		</div>
	</div>

	<%= render "devise/shared/links" unless staging? %>

</section>
